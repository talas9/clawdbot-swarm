{
  "name": "swarm-cli",
  "version": "0.1.0",
  "description": "CLI utilities for clawdbot-swarm implementation",
  "type": "module",
  "bin": {
    "swarm": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "swarm": "node --loader ts-node/esm src/index.ts",
    "test": "node --test dist/test/**/*.test.js",
    "test:watch": "node --test --watch dist/test/**/*.test.js"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.7.3",
    "ts-node": "^10.9.2"
  }
}
